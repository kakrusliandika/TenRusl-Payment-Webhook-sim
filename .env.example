###############################################################################
# TenRusl Payment Webhook Simulator — DEV/LOCAL TEMPLATE
# Salin file ini menjadi .env lalu sesuaikan nilainya.
###############################################################################

APP_NAME="TenRusl Payment Webhook Sim"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

###############################################################################
# LOGGING
###############################################################################
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

###############################################################################
# CORS (untuk Admin Frontend beda domain/port)
###############################################################################
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
CORS_SUPPORTS_CREDENTIALS=false
CORS_MAX_AGE=600

###############################################################################
# TRUSTED PROXIES (opsional)
###############################################################################
TRUSTED_PROXIES=

###############################################################################
# RATE LIMITING (opsional; dipakai RouteServiceProvider)
###############################################################################
TENRUSL_RATE_WEB_PER_MINUTE=240
TENRUSL_RATE_API_PER_SECOND=5
TENRUSL_RATE_API_PER_MINUTE=120
TENRUSL_RATE_WEBHOOKS_PER_SECOND=10
TENRUSL_RATE_WEBHOOKS_PER_MINUTE=600

# Alias untuk config/tenrusl.php (jika dipakai)
TENRUSL_WEBHOOK_RATE_LIMIT_PER_MINUTE=600
TENRUSL_WEBHOOK_RATE_LIMIT_KEY_BY=ip_provider

###############################################################################
# DATABASE — PILIH SATU (DEV)
###############################################################################
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL (opsional)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=tenrusl_webhook
# DB_USERNAME=root
# DB_PASSWORD=

###############################################################################
# SESSION / CACHE / QUEUE (DEV)
###############################################################################
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

QUEUE_CONNECTION=database
CACHE_STORE=file

###############################################################################
# REDIS (opsional)
###############################################################################
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

###############################################################################
# MAIL — log driver untuk dev
###############################################################################
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@tenrusl.local"
MAIL_FROM_NAME="${APP_NAME}"

###############################################################################
# Frontend (Vite)
###############################################################################
VITE_APP_NAME="${APP_NAME}"

###############################################################################
# TenRusl — Admin
###############################################################################
TENRUSL_ADMIN_DEMO_ENABLED=true
TENRUSL_ADMIN_DEMO_KEY=changeme_admin_demo_key
TENRUSL_ADMIN_KEY=
TENRUSL_ADMIN_HEADER=X-Admin-Key

# Legacy (DEPRECATED)
ADMIN_DEMO_KEY=changeme_admin_demo_key

###############################################################################
# TenRusl — Allowlist (opsional)
###############################################################################
# TENRUSL_PROVIDERS_ALLOWLIST=mock,xendit,midtrans,stripe

###############################################################################
# TenRusl — Retry / Scheduler / Idempotency / Dedup / Signature
###############################################################################
TENRUSL_MAX_RETRY_ATTEMPTS=5
TENRUSL_RETRY_BASE_MS=500
TENRUSL_RETRY_CAP_MS=30000

TENRUSL_IDEMPOTENCY_TTL=3600
TENRUSL_IDEMPOTENCY_STORAGE=cache
TENRUSL_IDEMPOTENCY_TTL_SECONDS=7200
TENRUSL_IDEMPOTENCY_LOCK_SECONDS=30

# Legacy (DEPRECATED)
IDEMPOTENCY_STORAGE=cache
IDEMPOTENCY_TTL_SECONDS=7200
IDEMPOTENCY_LOCK_SECONDS=30

TENRUSL_SCHEDULER_PROVIDER=
TENRUSL_SCHEDULER_BACKOFF_MODE=full
TENRUSL_SCHEDULER_LIMIT=200
TENRUSL_SCHEDULER_QUEUE=false

TENRUSL_WEBHOOK_DEDUP_TTL_SECONDS=86400
WEBHOOK_DEDUP_TTL_SECONDS=86400

TENRUSL_SIG_TS_LEEWAY=300
TENRUSL_SIG_TS_LEEWAY_SECONDS=300

###############################################################################
# WEBHOOK RECEIVER — SAFETY KNOBS
###############################################################################
TENRUSL_WEBHOOK_MAX_PAYLOAD_BYTES=5242880
TENRUSL_WEBHOOK_QUEUE=default

# Legacy (DEPRECATED)
SIG_TS_LEEWAY=300

###############################################################################
# Provider secrets — isi sesuai kebutuhan
###############################################################################
TENRUSL_MOCK_SECRET=
TENRUSL_XENDIT_CALLBACK_TOKEN=
TENRUSL_MIDTRANS_SERVER_KEY=

# Legacy (DEPRECATED)
MOCK_SECRET=
XENDIT_CALLBACK_TOKEN=
MIDTRANS_SERVER_KEY=

TENRUSL_STRIPE_WEBHOOK_SECRET=
STRIPE_WEBHOOK_SECRET=

TENRUSL_PAYPAL_ENV=sandbox
TENRUSL_PAYPAL_WEBHOOK_ID=
TENRUSL_PAYPAL_CLIENT_ID=
TENRUSL_PAYPAL_CLIENT_SECRET=

PAYPAL_ENV=sandbox
PAYPAL_WEBHOOK_ID=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

TENRUSL_PADDLE_SIGNING_SECRET=
TENRUSL_PADDLE_PUBLIC_KEY=
PADDLE_SIGNING_SECRET=
PADDLE_PUBLIC_KEY=
