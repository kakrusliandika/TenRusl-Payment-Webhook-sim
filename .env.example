###############################################################################
# TenRusl Payment Webhook Simulator — Example Environment
# Salin file ini menjadi .env lalu sesuaikan nilainya
###############################################################################

APP_NAME="TenRusl Payment Webhook Sim"
APP_ENV=local
APP_KEY=base64:jNx1QaF9oWeFaTb+LYeFQoAi2V2zZPAxZUi4V278XwU=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database
ANALYTICS_ENDPOINT=

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

###############################################################################
# DATABASE — PILIH SATU
###############################################################################

# --- Opsi default (disarankan untuk lokal): SQLite (tanpa service DB)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# --- Opsi alternatif: MySQL (Laragon/Docker), uncomment & isi
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=tenrusl_webhook
# DB_USERNAME=root
# DB_PASSWORD=
# (Jika pakai Docker compose dengan service "mysql", host= mysql , port= 3306)

###############################################################################
# SESSION / CACHE / QUEUE — aman di lokal tanpa driver DB
###############################################################################

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Lokal sederhana: tidak perlu tabel queue
QUEUE_CONNECTION=sync

# Cache file agar tidak perlu pdo_sqlite atau tabel cache
CACHE_STORE=file
# CACHE_PREFIX=

###############################################################################
# REDIS (opsional)
###############################################################################

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

###############################################################################
# MAIL — log driver untuk dev
###############################################################################

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@tenrusl.local"
MAIL_FROM_NAME="${APP_NAME}"

###############################################################################
# AWS (opsional)
###############################################################################

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

###############################################################################
# Frontend (Vite)
###############################################################################

VITE_APP_NAME="${APP_NAME}"

###############################################################################
# TenRusl-specific (untuk verifikasi signature/token demo)
###############################################################################

TENRUSL_MAX_RETRY_ATTEMPTS=5
TENRUSL_IDEMPOTENCY_TTL=3600

# MOCK — untuk provider "mock"; dipakai menghitung HMAC-SHA256 atas raw body
MOCK_SECRET=changeme

# Xendit — token header x-callback-token
XENDIT_CALLBACK_TOKEN=changeme

# Midtrans — server key untuk signature-key (sha512)
MIDTRANS_SERVER_KEY=changeme

###############################################################################
# Provider Tambahan (opsional): isi yang dibutuhkan saja
###############################################################################

# Stripe — header: Stripe-Signature (HMAC SHA-256 atas "t.payload")
STRIPE_WEBHOOK_SECRET=

# PayPal — Verify Webhook Signature (gunakan kredensial API)
PAYPAL_ENV=sandbox          # sandbox|live
PAYPAL_WEBHOOK_ID=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Paddle — gunakan salah satu (secret baru) atau public key (skema lama)
PADDLE_SIGNING_SECRET=
# PADDLE_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# Lemon Squeezy — header: X-Signature (HMAC SHA-256 raw body)
LS_WEBHOOK_SECRET=

# Airwallex — header: x-timestamp + x-signature (base64 HMAC SHA-256 atas ts+body)
AIRWALLEX_WEBHOOK_SECRET=

# Tripay — header: X-Callback-Signature (HMAC SHA-256 raw JSON body)
TRIPAY_PRIVATE_KEY=

# DOKU — header: Signature (HMACSHA256=base64(...)), butuh komponen di bawah
DOKU_CLIENT_ID=
DOKU_SECRET_KEY=
DOKU_REQUEST_TARGET=/orders/v1/status/INV-123   # untuk simulasi signature

# DANA — Asymmetric Signature (RSA public key)
# Isi public key PEM bila verifikasi memakai RSA (simulasi)
# DANA_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
DANA_PUBLIC_KEY=

# OY! Indonesia — callback auth/whitelist (opsional, tergantung produk)
OY_CALLBACK_SECRET=
OY_IP_WHITELIST=

# Payoneer — shared secret (tergantung produk Checkout/webhook)
PAYONEER_SHARED_SECRET=
PAYONEER_MERCHANT_ID=

# Skrill — IPN (MD5 signature)
SKRILL_MERCHANT_ID=
SKRILL_EMAIL=
SKRILL_MD5_SECRET=

# Amazon Buy with Prime — header: x-amzn-signature (RSA)
# AMZN_BWP_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
AMZN_BWP_PUBLIC_KEY=
