###############################################################################
# TenRusl Payment Webhook Simulator — Example Environment
# Salin file ini menjadi .env lalu sesuaikan nilainya
###############################################################################

APP_NAME="TenRusl Payment Webhook Sim"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

###############################################################################
# DATABASE — PILIH SATU
###############################################################################

# --- Opsi default (disarankan untuk lokal): SQLite (tanpa service DB)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# --- Opsi alternatif: MySQL (Laragon/Docker), uncomment & isi
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=tenrusl_webhook
# DB_USERNAME=root
# DB_PASSWORD=
# (Jika pakai Docker compose dengan service "mysql", host= mysql , port= 3306)

###############################################################################
# SESSION / CACHE / QUEUE — aman di lokal tanpa driver DB
###############################################################################

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Lokal sederhana: tidak perlu tabel queue
QUEUE_CONNECTION=sync

# Cache file agar tidak perlu pdo_sqlite atau tabel cache
CACHE_STORE=file
# CACHE_PREFIX=

###############################################################################
# REDIS (opsional)
###############################################################################

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

###############################################################################
# MAIL — log driver untuk dev
###############################################################################

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@tenrusl.local"
MAIL_FROM_NAME="${APP_NAME}"

###############################################################################
# AWS (opsional)
###############################################################################

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

###############################################################################
# Frontend (Vite)
###############################################################################

VITE_APP_NAME="${APP_NAME}"

###############################################################################
# TenRusl-specific (untuk verifikasi signature/token demo)
###############################################################################

# MOCK — untuk provider "mock"; dipakai menghitung HMAC-SHA256 atas raw body
MOCK_SECRET=changeme

# Xendit — token header x-callback-token
XENDIT_CALLBACK_TOKEN=changeme

# Midtrans — server key untuk signature-key
MIDTRANS_SERVER_KEY=changeme
