###############################################################################
# TenRusl Payment Webhook Simulator — Example Environment
# Salin file ini menjadi .env lalu sesuaikan nilainya
###############################################################################

APP_NAME="TenRusl Payment Webhook Sim"
APP_ENV=local
APP_KEY=
# Jalankan: php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
ANALYTICS_ENDPOINT=

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

###############################################################################
# CORS (untuk Admin Frontend beda domain/port)
###############################################################################
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4173
CORS_SUPPORTS_CREDENTIALS=false
CORS_MAX_AGE=600

###############################################################################
# DATABASE — PILIH SATU
###############################################################################

# --- Opsi default (disarankan untuk lokal): SQLite
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# --- Opsi alternatif: MySQL (Laragon/Docker), uncomment & isi
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=tenrusl_webhook
# DB_USERNAME=root
# DB_PASSWORD=

###############################################################################
# SESSION / CACHE / QUEUE
###############################################################################

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

QUEUE_CONNECTION=database
CACHE_STORE=file

###############################################################################
# REDIS (opsional)
###############################################################################

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

###############################################################################
# MAIL — log driver untuk dev
###############################################################################

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@tenrusl.local"
MAIL_FROM_NAME="${APP_NAME}"

###############################################################################
# Frontend (Vite)
###############################################################################

VITE_APP_NAME="${APP_NAME}"

###############################################################################
# TenRusl — Admin Demo
###############################################################################
# Dipakai oleh endpoint /api/admin/* (header-based):
TENRUSL_ADMIN_DEMO_ENABLED=true
TENRUSL_ADMIN_DEMO_KEY=changeme_admin_demo_key
# Optional alias (controller juga cek ini):
ADMIN_DEMO_KEY=

# Jika ingin custom header name:
TENRUSL_ADMIN_HEADER=X-Admin-Key

###############################################################################
# TenRusl — Providers Allowlist (opsional)
###############################################################################
# Default ada di config/tenrusl.php. Kalau ingin override:
# TENRUSL_PROVIDERS_ALLOWLIST=mock,xendit,midtrans,stripe

###############################################################################
# TenRusl — Retry / Scheduler / Idempotency / Dedup / Signature knobs
###############################################################################

TENRUSL_MAX_RETRY_ATTEMPTS=5
TENRUSL_RETRY_BASE_MS=500
TENRUSL_RETRY_CAP_MS=30000

TENRUSL_IDEMPOTENCY_TTL=3600
TENRUSL_IDEMPOTENCY_TTL_SECONDS=7200
IDEMPOTENCY_TTL_SECONDS=7200
IDEMPOTENCY_STORAGE=cache
IDEMPOTENCY_LOCK_SECONDS=30

TENRUSL_SCHEDULER_PROVIDER=
TENRUSL_SCHEDULER_BACKOFF_MODE=full
TENRUSL_SCHEDULER_LIMIT=200

TENRUSL_WEBHOOK_DEDUP_TTL_SECONDS=86400
WEBHOOK_DEDUP_TTL_SECONDS=86400

TENRUSL_SIG_TS_LEEWAY=300
SIG_TS_LEEWAY=300

###############################################################################
# Provider demo secrets (untuk verifikasi signature/token)
###############################################################################

MOCK_SECRET=changeme
XENDIT_CALLBACK_TOKEN=changeme
MIDTRANS_SERVER_KEY=changeme

###############################################################################
# Provider Tambahan (opsional): isi yang dibutuhkan saja
###############################################################################

STRIPE_WEBHOOK_SECRET=

PAYPAL_ENV=sandbox
PAYPAL_WEBHOOK_ID=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

PADDLE_SIGNING_SECRET=
PADDLE_PUBLIC_KEY=

LS_WEBHOOK_SECRET=
AIRWALLEX_WEBHOOK_SECRET=
TRIPAY_PRIVATE_KEY=

DOKU_CLIENT_ID=
DOKU_SECRET_KEY=
DOKU_REQUEST_TARGET=/

DANA_PUBLIC_KEY=

OY_CALLBACK_SECRET=
OY_IP_WHITELIST=

PAYONEER_SHARED_SECRET=
PAYONEER_MERCHANT_ID=

SKRILL_MERCHANT_ID=
SKRILL_EMAIL=
SKRILL_MD5_SECRET=

AMZN_BWP_PUBLIC_KEY=
